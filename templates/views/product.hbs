<div class="container">
    <div class="row">

        <p>
            <a href="/products">&larr; Back to products</a>
        </p>

        <h2>{{data.product.title}}</h2>


        <div class="col-md-12 col-lg-12">
            <article>

                <hr>


                <div class="row">
                    <div class="col-md-6 col-lg-6" id="product-image">
                        {{#if data.product.image}}
                        <img src="{{cloudinaryUrl data.product.image crop='fit'}}" class="center-block img-responsive"> {{/if}}
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Price: </strong>{{data.product.price}}</li>
                            <li class="list-group-item">
                                <strong>QTY: </strong>{{data.product.qty}}</li>
                            <li class="list-group-item">
                                <strong> Category:</strong> {{data.product.itemType}}</li>
                        </ul>
                        <div class="well">
                            {{& data.product.description}}
                        </div>
                        <a class="btn btn-success btn-block" href="/contact">Ask About This Product</a>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>